<div class="container mx-auto px-4">
  <!-- Welcome message -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <h2 class="text-lg font-semibold text-blue-800 mb-2">ようこそ、CostCalcへ！</h2>
    <p class="text-blue-700">現在 <strong><%= @materials.count %></strong> 件の材料が登録されています。</p>
  </div>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">材料一覧</h1>
    <%= link_to "新規作成", new_material_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">名前</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">価格</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @materials.each do |material| %>
          <tr>
            <td class="px-6 py-4"><%= material.name %></td>
            <td class="px-6 py-4">¥<%= material.price %></td>
            <td class="px-6 py-4">
              <%= link_to "詳細", material, class: "text-blue-600 hover:text-blue-900 mr-2" %>
              <%= link_to "編集", edit_material_path(material), class: "text-green-600 hover:text-green-900 mr-2" %>
              <%= link_to "削除", material, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
