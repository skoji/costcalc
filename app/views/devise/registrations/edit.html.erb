<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center"><%= t('devise.registrations.edit.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, t('devise.email'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded">
        <%= t('devise.pending_reconfirmation') %> <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div>
      <%= f.label :profit_ratio, t('devise.profit_ratio'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :profit_ratio, step: 0.01, min: 0.01, max: 1.0,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <p class="text-xs text-gray-500 mt-1"><%= t('devise.profit_ratio_example') %></p>
    </div>

    <div>
      <%= f.label :password, t('devise.password'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <p class="text-xs text-gray-500 mt-1"><%= t('devise.password_blank_note') %></p>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500"><%= @minimum_password_length %><%= t('devise.minimum_password_length') %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, t('devise.password_confirmation'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :current_password, t('devise.current_password'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :current_password, autocomplete: "current-password",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <p class="text-xs text-gray-500 mt-1"><%= t('devise.current_password_note') %></p>
    </div>

    <div>
      <%= f.submit t('devise.registrations.edit.submit'), 
          class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="mt-8 border-t pt-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4"><%= t('devise.registrations.edit.delete_account') %></h3>
    <div class="text-center">
      <%= button_to t('devise.registrations.edit.delete_account_button'), registration_path(resource_name), 
          data: { confirm: t('devise.registrations.edit.confirm_delete'), turbo_confirm: t('devise.registrations.edit.confirm_delete') }, 
          method: :delete,
          class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-6 text-center">
    <%= link_to t('common.back'), :back, class: "text-blue-500 hover:text-blue-700 text-sm" %>
  </div>
</div>
