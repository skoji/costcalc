<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">原材料</h1>
    <%= link_to "原材料追加", new_material_path, 
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
  
  <% @materials.each do |material| %>
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= material.name %></h2>
      
      <ul class="space-y-2 text-gray-700">
        <li><strong>価格:</strong> ¥<%= material.price %></li>
        <% if material.material_quantities.any? %>
          <li><strong>数量:</strong> 
            <div class="ml-4">
              <% material.material_quantities.each do |quantity| %>
                <div><%= quantity.count %> <%= quantity.unit.name %></div>
              <% end %>
            </div>
          </li>
        <% end %>
        <li class="pt-2 flex space-x-2">
          <%= link_to "編集", edit_material_path(material), 
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded text-sm" %>
          <%= link_to "削除", material_path(material), 
              data: { turbo_method: :delete, turbo_confirm: "削除しますか？" }, 
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-3 rounded text-sm" %>
        </li>
      </ul>
    </div>
  <% end %>
  
  <% if @materials.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">まだ原材料が登録されていません。</p>
      <%= link_to "最初の原材料を追加", new_material_path, 
          class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
