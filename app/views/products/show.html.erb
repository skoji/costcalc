<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @product.name %></h1>
    <%= link_to "編集", edit_product_path(@product), 
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
  
  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
      <div>
        <p class="text-gray-700"><strong>仕込み数:</strong> <%= @product.count %></p>
        <p class="text-gray-700"><strong>原価:</strong> ¥<%= number_with_precision @product.cost, precision: 2 %></p>
      </div>
      <div>
        <p class="text-gray-700"><strong>１つあたり原価:</strong> ¥<%= number_with_precision @product.cost_per_unit, precision: 2 %></p>
        <p class="text-gray-700"><strong>原価<%= (current_user.profit_ratio * 100).to_i %>%として:</strong> ¥<%= number_with_precision current_user.selling_price_for(@product.cost_per_unit), precision: 2 %></p>
      </div>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b">
      <h3 class="text-lg font-semibold text-gray-800">原材料</h3>
    </div>
    
    <% if @product.product_ingredients.any? %>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">材料名</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">分量</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">材料価格</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @product.product_ingredients.each do |ingredient| %>
            <tr class="<%= 'bg-red-50' if ingredient.invalid_cost %>">
              <td class="px-6 py-4">
                <%= link_to ingredient.material.name, edit_material_path(ingredient.material), 
                    class: "text-blue-600 hover:text-blue-800" %>
              </td>
              <td class="px-6 py-4"><%= ingredient.count %> <%= ingredient.unit.name %></td>
              <td class="px-6 py-4">¥<%= number_with_precision ingredient.cost, precision: 2 %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-6 py-8 text-center">
        <p class="text-gray-500">まだ原材料が登録されていません。</p>
        <%= link_to "編集して原材料を追加", edit_product_path(@product), 
            class: "mt-2 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6">
    <%= link_to "← 製品一覧に戻る", products_path, 
        class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>