<div class="container mx-auto px-4 max-w-2xl">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h1 class="text-3xl font-bold mb-6">材料詳細</h1>
    
    <div class="mb-4">
      <p class="text-gray-700 font-bold">名前:</p>
      <p class="text-xl"><%= @material.name %></p>
    </div>
    
    <div class="mb-4">
      <p class="text-gray-700 font-bold">価格:</p>
      <p class="text-xl">¥<%= @material.price %></p>
    </div>
    
    <div class="flex gap-2 mt-6">
      <%= link_to "編集", edit_material_path(@material), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "削除", @material, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "一覧に戻る", materials_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
