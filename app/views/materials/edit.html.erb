<div class="container mx-auto px-4 max-w-3xl">
  <h1 class="text-3xl font-bold mb-6">原材料編集</h1>
  
  <div class="bg-white shadow-md rounded-lg p-6">
    <!-- デバッグ情報 -->
    <% if Rails.env.development? %>
      <div class="bg-gray-100 p-2 mb-4 text-xs">
        <strong>Debug:</strong> 
        Material: <%= @material_form.material.name %>, 
        MaterialQuantities: <%= @material_form.material_quantities.length %>
        <% @material_form.material_quantities.each_with_index do |mq, i| %>
          <br>MQ[<%= i %>]: count=<%= mq.material_count %>, unit_id=<%= mq.unit_id %>
        <% end %>
      </div>
    <% end %>
    
    <%= form_with model: @material_form, url: material_path(@material_form.material), method: :patch, local: true, scope: :material_form, class: "space-y-6" do |form| %>
      
      <% if @material_form.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-md">
          <h4 class="font-bold mb-2">エラーが発生しました:</h4>
          <ul class="list-disc list-inside">
            <% @material_form.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <!-- 基本情報 -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :material_name, "材料名", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :material_name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div>
          <%= form.label :material_price, "価格 (円)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :material_price, step: 0.01, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>

      <!-- 数量・単位セクション -->
      <div class="border-t pt-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">購入単位</h3>
        <p class="text-sm text-gray-600 mb-4">上記の価格がどの単位あたりの価格か指定してください</p>
        
        <%= form.fields_for :material_quantities, @material_form.material_quantities do |quantity| %>
          <div class="grid grid-cols-12 gap-2 mb-3 p-3 bg-gray-50 rounded">
            <%= quantity.hidden_field :id %>
            <%= quantity.hidden_field :index %>
            
            <!-- 数量 -->
            <div class="col-span-4">
              <%= quantity.label :material_count, "数量", class: "block text-xs text-gray-600 mb-1" %>
              <%= quantity.number_field :material_count, 
                  step: 0.1,
                  class: "w-full px-2 py-1 border border-gray-300 rounded text-sm" %>
            </div>
            
            <!-- 単位 -->
            <div class="col-span-4">
              <%= quantity.label :unit_id, "単位", class: "block text-xs text-gray-600 mb-1" %>
              <%= quantity.select :unit_id, 
                  options_for_select(current_user.units.map{ |u| [u.name, u.id] }, quantity.object.unit_id), 
                  { prompt: "単位を選択" },
                  { class: "w-full px-2 py-1 border border-gray-300 rounded text-sm" } %>
            </div>
            
            <div class="col-span-4 flex items-end">
              <span class="text-sm text-gray-600 pb-1">で <%= form.object.material_price || "上記価格" %> 円</span>
            </div>
          </div>
        <% end %>
      </div>

      <!-- アクションボタン -->
      <div class="flex space-x-4 pt-4 border-t">
        <%= form.submit '更新', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
        <%= link_to "キャンセル", materials_path, 
            class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "削除", material_path(@material_form.material), 
            data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, 
            class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>